@model IEnumerable<WissenTeknikServis.Entity.Entities.Ariza>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Genel Bakış
        </h1>

    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">İşlem Bekleyen Talepler </h3>  <span class="label label-danger">  @Model.Count()</span>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr style="background-color:#ff7979;">
                                                <td>@item.CreateDate</td>
                                                <td>@item.Baslik</td>
                                                @if (item.Aciklama.Length > 40)
                                                {
                                                    <td>@item.Aciklama.Substring(0, 39) ...</td>
                                                }
                                                else
                                                {
                                                    <td>@item.Aciklama</td>
                                                }
                                                <td class="text-center"><a href="@Url.Action("Detay","Operator", new {id=item.ID })">   <span class="label label-primary"><i class="fa fa-search"></i></span></a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                    <!-- /.footer -->
                </div>
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
